
<%- include("../partials/header") %>

<%- include("../partials/navbar") %>



<!-- <h1>Index Page</h1> -->

<main class="container">


    <h1 class="display-5"><strong>Shopping-Cart</strong></h1>

    <br>

    <div class="row">

        <% for(let product of products) {%>
 
            <div class="col-lg-4 col-md-6 mb-3">

                <div class="card mx-auto" style="width: 20rem;">
                    <img src="<%=product.img%>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%=product.name%></h5>
                      <p class="card-text"><%=product.desc.substring(0,100) %></p>
                      <h5 class="card-title">&#x20B9;<%=product.price%></h5>
                      <a href="/products/<%=product._id%>" class="btn btn-outline-primary">Buy Now</a>
                    </div>
                  </div>

            </div>
            
        <% } %>     

    </div>



</main>









